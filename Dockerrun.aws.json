{
  "AWSEBDockerrunVersion": "1",
  "Image": {
    "Name": "mcr.microsoft.com/dotnet/aspnet:8.0",
    "Update": "true"
  },
  "Ports": [
    {
      "ContainerPort": 80,
      "HostPort": 80
    }
  ],
  "Volumes": [
    {
      "HostDirectory": "/var/app",
      "ContainerDirectory": "/app"
    }
  ],
  "Command": "cd /app && dotnet RecipeOptimizer.API.dll",
  "Environment": [
    {
      "Name": "ASPNETCORE_ENVIRONMENT",
      "Value": "Production"
    },
    {
      "Name": "ConnectionStrings__DefaultConnection",
      "Value": "Host=${RDS_HOSTNAME};Port=${RDS_PORT};Database=${RDS_DB_NAME};Username=${RDS_USERNAME};Password=${RDS_PASSWORD}"
    }
  ]
}
